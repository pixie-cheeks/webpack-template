{
  "name": "webpack-template",
  "version": "1.0.0",
  "description": "Basic webpack template",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "build": "webpack -c webpack/prod.js",
    "start": "webpack serve --open -c webpack/dev.js",
    "deploy": "gh-pages -d dist -m \"Deploy at $(date '+%F %T')\"",
    "lint": "eslint -c .config/eslintrc.cjs --max-warnings 0 .",
    "lint:fix": "eslint . --fix -c .config/eslintrc.cjs",
    "csslint": "stylelint -c .config/stylelint.config.js --mw 0 .",
    "test": "jest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@awmottaz/prettier-plugin-void-html": "^1.6.1",
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@types/jest": "^29.5.12",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.8.0",
    "gh-pages": "^6.1.1",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.0",
    "prettier": "^3.3.3",
    "style-loader": "^4.0.0",
    "stylelint": "^16.8.2",
    "stylelint-config-standard": "^36.0.1",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4",
    "webpack-merge": "^6.0.1"
  },
  "prettier": {
    "singleQuote": true,
    "plugins": [
      "@awmottaz/prettier-plugin-void-html"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
